{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Java",
            "type": "java",
            "request": "launch",
            "stopOnEntry": false,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${workspaceRoot}",
            "startupClass": "example.CircleBot",
            "sourcePath": [
                "${workspaceRoot}/src"
            ],
            "classpath": [
                "${workspaceRoot}/bin",
                "${workspaceRoot}/build/lib/FedoraBots.jar"
            ]
        },
        {
            "name": "Java Console App",
            "type": "java",
            "request": "launch",
            "stopOnEntry": false,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${fileDirname}",
            "startupClass": "example.CircleBot",
            "sourcePath": [
                "${workspaceRoot}/src"
            ],
            "classpath": [
                "${workspaceRoot}/bin",
                "${workspaceRoot}/build/lib/FedoraBots.jar"
            ],
            "externalConsole": true
        }
    ]
}
