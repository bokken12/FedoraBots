{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Java",
            "type": "java",
            "request": "launch",
            "stopOnEntry": false,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${workspaceRoot}",
            "startupClass": "server.Test",
            "sourcePath": ["${workspaceRoot}/src"],
            "options": [
                "-classpath",
                "${workspaceRoot}/bin"
            ]
        },
        {
            "name": "Java Console App",
            "type": "java",
            "request": "launch",
            "stopOnEntry": true,
            "jdkPath": "${env:JAVA_HOME}/bin",
            "cwd": "${fileDirname}",
            "startupClass": "${fileBasename}",
            "options": [
                "-classpath",
                "\"${fileDirname};.\""
            ],
            "externalConsole": true
        }
    ]
}
